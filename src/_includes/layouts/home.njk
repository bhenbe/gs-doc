---
title: TheGreenShot Documentation
lang: en
---
<!doctype html>
<html lang="{{ locale }}" dir="{{ dir }}">
  <head>
    {% include 'head.njk' %}
  </head>
  <body>
    <main class="max-w-prose md:max-w-5xl mx-auto p-4">
    
      <div class="my-20 text-center">
        {{ content | safe }}
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 my-20">
        <section class="p-8 border border-solid border-gray-200 rounded shadow-lg">
          <h2 class="text-2xl mb-3 text-gray-600">{{ 'User' | i18n }}</h2>
          <ul>
          {%- for post in collections.user | sortByOrder -%}
            <li class="mb-2"><a href="{{ post.url }}" class="text-blue-600 underline">{{ post.data.title }}</a></li>
          {%- endfor -%}
          </ul>
        </section>

        <section class="p-8 border border-solid border-gray-200 rounded shadow-lg">
          <h2 class="text-2xl mb-3 text-gray-600">{{ 'Administrator' | i18n }}</h2>
          <ul>
          {%- for post in collections.administrator | sortByOrder -%}
            <li class="mb-2"><a href="{{ post.url }}" class="text-blue-600 underline">{{ post.data.title }}</a></li>
          {%- endfor -%}
          </ul>
        </section>

        <section class="p-8 border border-solid border-gray-200 rounded shadow-lg">
          <h2 class="text-2xl mb-3 text-gray-600">{{ 'Productor' | i18n }}</h2>
          <ul>
          {%- for post in collections.productor | sortByOrder -%}
            <li class="mb-2"><a href="{{ post.url }}" class="text-blue-600 underline">{{ post.data.title }}</a></li>
          {%- endfor -%}
          </ul>
        </section>
      </div>
    </main>
    {% include 'footer.njk' %}
  </body>
</html>